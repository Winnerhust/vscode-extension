{
    "name": "lookupreferences",
    "displayName": "lookupReferences",
    "description": "look up all references of a symbol,and build links to access them easily.",
    "version": "0.0.1",
    "publisher": "WinnerHust",
    "engines": {
        "vscode": "^1.25.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Winnerhust/vscode-extension/tree/master/lookupreferences"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:references.showAll"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [{
            "command": "references.showAll",
            "title": "查看所有引用"
        }, {
            "command": "references.pre",
            "title": "查看上一个引用"
        }, {
            "command": "references.next",
            "title": "查看下一个引用"
        }],
        "menus": {
            "editor/context": [{
                "command": "references.showAll",
                "when": "editorHasReferenceProvider",
                "group": "references@1"
            }, {
                "command": "references.pre",
                "group": "references@2"
            }, {
                "command": "references.next",
                "group": "references@3"
            }]
        },
        "keybindings": [{
            "command": "references.showAll",
            "key": "ctrl+win+/",
            "mac": "ctrl+cmd+/"
        }, {
            "command": "references.pre",
            "key": "ctrl+win+up",
            "mac": "ctrl+cmd+up"
        }, {
            "command": "references.next",
            "key": "ctrl+win+down",
            "mac": "ctrl+cmd+down"
        }]

    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}